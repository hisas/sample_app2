- if @feed_items.nil?
  = form_tag("/users/#{@user.id}/microposts/", method: "GET", enforce_utf8: false) do
    = label_tag :content, "Content"
    = text_field_tag :content, '', placeholder: "Please enter content"
    = submit_tag  'Search'
- else
  = form_tag("/microposts/search", method: "GET", enforce_utf8: false) do
    = label_tag :content, "Content"
    = text_field_tag :content, '', placeholder: "Please enter content"
    = submit_tag  'Search'
